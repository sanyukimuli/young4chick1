doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css' rel='stylesheet')
    link(rel='stylesheet' href='/styles/yfHub.css')
    title YF Hub

  body
    .hubContainer

      div.logoutContainer
        a.logoutButton(href='/logout')
          i.ri-logout-box-r-line
          | Logout
      p.greeting Hello #{username}, welcome to your YF Hub!

      .hubContent
        .formSection
          
          h2
            i.ri-article-line
            |  Chick/Feed Request Form

          form(action='/requestChicks' method='POST')
            label(for='firstName')
              i.ri-user-line
              | First Name
            input(type='text' name='firstName' required)

            label(for='lastName')
              i.ri-user-line
              | Last Name
            input(type='text' name='lastName' required)

            label(for='nin') 
              i.ri-id-card-line
              | NIN Number
            input(type='text' name='ninNumber' required)

            label(for='chickType')
              i.ri-bird-line
              | Chick Type
            select(name='chickType' required)
              option(value='') --
              option(value='Broiler') Broiler
              option(value='Layer') Layer

            label(for='farmerStatus')
              i.ri-leaf-line
              | Farmer Status
            select(name='farmerStatus' required)
              option(value='') --
              option(value='Starter Farmer') Starter Farmer
              option(value='Returning Farmer') Returning Farmer

            label(for='category')
              i.ri-stack-line
              | Chick Category
            select(name='chickCategory' required)
              option(value='') --
              option(value='Exotic') Exotic
              option(value='Local') Local

            label(for='quantity')
              i.ri-hashtag
              | Quantity*
            p.smallNote *Starter Farmers will receive max 100 chicks on first order
            input(type='number' name='quantity' required min=1)

            label(for='feed')
              i.ri-seedling-line
              | Feed Amount
            input(type='number' name='feedAmount' min=0, max=2)

            button(type='submit')
              i.ri-send-plane-line
              | Submit Request

        .ordersSection
          h2
            i.ri-folder-line
            | Orders

          .tabButtons
            button.tabBtn.active(data-tab='active')
              i.ri-time-line
              | Active Orders
            button.tabBtn(data-tab='history')
              i.ri-history-line
              | Order History

          .tabContent#active
            .card
              p No active orders yet.

          .tabContent#history(style='display:none')
            .card
              p No order history available.

    script(src='/js/yfHub.js')
